                            <TextBlock Padding="10 0 0 0" Grid.Column="1">Projects</TextBlock>
                        </StackPanel>
                    </Button>-->

                    <Button Background="Transparent" Style="{StaticResource NavigationButton}" Command="{Binding ViewCommand}" CommandParameter="TasksView">
                        <StackPanel Orientation="Horizontal">
