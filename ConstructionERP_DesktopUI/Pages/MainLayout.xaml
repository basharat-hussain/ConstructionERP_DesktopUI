                </StackPanel>
            </ScrollViewer>

            <!--Main Page Holder-->
            <ContentControl Grid.Column="1" x:Name="Container"/>

        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="3" Background="#111">
            <TextBlock Padding="2"></TextBlock>
